---
import * as CONFIG from "../../config";
import Logo from "./Logo.astro";
import { Icon } from "astro-icon";
---

<header>
	<nav class="nav-wrapper">
		<div class="logo">
			<a href="/">
				<Logo />
				<h1 tabindex="0">{CONFIG.NAV_BAR.siteName}</h1>
			</a>
		</div>
		<div class="navigation">
			<div class="dropdowns">
				<div class="lessons">
					<h1>Lessons</h1>
				</div>
				<div class="resources">
					<h1>Resources</h1>
				</div>
				<div class="about">
					<h1>About</h1>
				</div>
			</div>
			<div class="menu">
				<Icon name="ph:dots-three-bold" />
			</div>
		</div>
		<div class="search">
			<div class="icon">
				<Icon name="ph:magnifying-glass-fill" />
			</div>
			<input type="text" placeholder="Search" />
		</div>
	</nav>
</header>

<style>
	header {
		background-color: #0077b8;
		height: 4rem;
		align-items: center;
		display: flex;
		position: sticky;
		box-shadow: 0 0.125rem 0 0 black;
		margin: 0;
		width: 100vw;
	}

	.nav-wrapper {
		display: flex;
		align-items: center;
		height: 4rem;
		width: 100vw;
	}

	.logo a {
		display: flex;
		gap: 0.5rem;
		color: white;
		text-decoration: none;
		align-items: center;
		text-shadow: 0 0.25rem 0.25rem rgba(0, 0, 0, 0.25);
		padding-inline: 1rem;
	}

	.logo h1 {
		font-family: "Lato", sans-serif;
		font-weight: 900;
		font-size: 1.5rem;
		margin: 0;
	}

	.navigation {
		display: grid;
		align-items: center;
	}

	.lessons,
	.resources,
	.about {
		display: flex;
		padding-inline: 3rem;
		height: 4rem;
		align-items: center;
	}

	.lessons:hover,
	.resources:hover,
	.about:hover {
		background: #005D8F;
	}

	.dropdowns {
		display: flex;
		align-items: center;
		margin: 0;
		grid-row: 1;
		grid-column: 1;
	}

	.dropdowns h1 {
		color: white;
		font-family: "Lato", sans-serif;
		font-weight: 600;
		font-size: 1.25rem;
	}

	.menu {
		grid-row: 1;
		grid-column: 1;
		visibility: hidden;
		height: 4rem;
		display: flex;
		align-items: center;
		padding-inline: 1rem;
	}

	.menu:hover {
		background: #005D8F;
	}

	input::placeholder {
		color: white;
		font-family: "Lato", sans-serif;
		font-weight: 300;
		font-size: 1.25rem;
		opacity: 1;
	}

	.search {
		margin-right: 3rem;
		margin-left: auto;
		display: grid;
		align-items: center;		
		width: 30vw;
	}

	.search input[type="text"] {
		border: none;
		box-decoration-break: none;
		outline-color: white;
		outline-width: 0.1875rem;
		outline-style: solid;
		background: rgba(255, 255, 255, 0.2);
		color: white;
		font-family: "Lato", sans-serif;
		font-weight: 300;
		font-size: 1rem;
		padding: 0.75rem;
		grid-column: 1;
		grid-row: 1;
	}

	.icon {
		grid-column: 1;
		grid-row: 1;
		margin-left: auto;
		padding-right: 0.5rem;
	}

	@media only screen and (max-width: 1200px) {
        .dropdowns {
            display: none;
        }
		.menu {
			visibility: visible;
		}
    }

	[astro-icon="ph:magnifying-glass-fill"] {
		color: white;
		height: 2rem;
	}

	[astro-icon="ph:dots-three-bold"] {
		color: white;
		height: 3rem;
	}
</style>
