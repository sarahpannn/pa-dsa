---
import * as CONFIG from '../../config';
import Logo from './Logo.astro';
import { Icon } from 'astro-icon'
---

<header>
	<nav class="nav-wrapper" title="Top Navigation">
		<div class="logo">
			<a href="/">
				<Logo />
				<h1 tabindex="0">{CONFIG.NAV_BAR.siteName}</h1>
			</a>
		</div>
		<div class="dropdowns">
			<div class="lessons">
				<h1>Lessons</h1>
				<Icon name="ph:caret-down-duotone" />
			</div>
			<div class="resources">
				<h1>Resources</h1>
				<Icon name="ph:caret-down-duotone" />
			</div>
			<div class="about">
				<h1>About</h1>
			</div>
		</div>
		<div class="search">
			<div class="icon">
				<Icon name="ph:magnifying-glass-fill" />
			</div>
			<input type="text" placeholder="Search">
		</div>
	</nav>
</header>

<style>
	header {
		background-color: #0077B8;
		height: 7.25rem;
		width: 100%;
		align-items: center;
		display: flex;
		overflow: hidden;
		position: sticky;
		box-shadow: 0 0.125rem 0 0 black;
		top: 0;
	}

	.nav-wrapper {
		display: flex;
		gap: 4.375rem;
		align-items: center;
	}

	.logo a {
		display: flex;
		gap: 0.5rem;
		color: white;
		text-decoration: none;
		align-items: center;
		text-shadow: 0 0.25rem 0.25rem rgba(0, 0, 0, 0.25);
		padding-left: 1rem;
	}

	.logo h1 {
		font-family: "Lato", sans-serif;
		font-weight: 900;
		font-size: 3rem;
		margin: 0;
	}

	.dropdowns {
		display: flex;
		align-items: center;
		color: white;
		font-family: "Lato", sans-serif;
		font-weight: 700;
		font-size: 1rem;
		margin: 0;
	}

	.lessons, .resources, .about {
		display: flex;
		align-items: center;
		padding: 1.55rem;
	}

	.lessons:hover, .resources:hover, .about:hover {
		background: #005D8F;
		box-shadow: 0 0 0 0.125rem black;
	}

	input::placeholder {
		color: white;
		font-family: "Lato", sans-serif;
		font-weight: 300;
		font-size: 1.25rem;
		opacity: 1;
	}

	.search {
		margin-left: 7rem;
		display: grid;
		align-items: center;
	}

	.search input[type=text] {
		border: none;
		box-decoration-break: none;
		outline-color: white;
		outline-width: 0.1875rem;
		outline-style: solid;
		width: 25rem;
		height: 3rem;
		background: rgba(255, 255, 255, 0.2);
		color: white;
		font-family: "Lato", sans-serif;
		font-weight: 300;
		font-size: 1.25rem;
		padding: 0.5rem;
		grid-column: 1;
		grid-row: 1;
	}

	.icon {
		grid-column: 1;
		grid-row: 1;
		margin-left: auto;
		padding-right: 0.5rem;
	}

	[astro-icon] {
		color: white;
		height: 2.5rem;
	}
</style>
