---
import { Icon } from 'astro-icon'
---

<div class="button">
    <h1> Start Here </h1>
    <Icon name="ph:caret-right-duotone" />
</div>

<style> 
    .button {
        background-color: #EB3933;
        height: 4rem;
        display: flex;
        box-shadow: 0.25rem 0.25rem #BA1812;
        align-items: center ;
        border-radius: 0.5rem;
        width: 14rem;
        height: 4rem;
        gap: 0;
        padding-left: 0.5rem;
        outline-width: 0.125rem;
        outline-color: black;
    }

    h1 {
        fill: white;
        font-weight: 800;
		font-size: 2rem;
        stroke: black; 
        stroke-width: 0.125rem;
        font-family: "Lato", sans-serif;  
    }

    .button:hover {
        background-color: #BA1812;
        box-shadow: 0.25rem 0.25rem #6F0E0B;
    }

    [astro-icon] {
		color: white;
		height: 2rem;
	}
</style>